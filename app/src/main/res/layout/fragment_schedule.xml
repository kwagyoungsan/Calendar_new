<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/schedule">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계획 추가"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Switch
            android:id="@+id/switch_repeat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="요일 반복"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/schedule_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="계획"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/scheduleplan"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:hint="내용을 입력해주세요."
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/select_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요일 선택"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/select_day_toggle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
            android:id="@+id/group_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tbgCheckedButton="@+id/choice_a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/libraryTv"
            android:gravity="center">

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="일"/>

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="월"/>

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="화"/>

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="수"/>

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="목"/>

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="금"/>

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="토"/>

        </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 선택"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Spinner
            android:id="@+id/spinner_ampm"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/spinner_design"
            android:popupBackground="@drawable/edittext_design"


            />

        <Spinner
            android:id="@+id/spinner_hour"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/spinner_design"
            android:popupBackground="@drawable/edittext_design"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"/>

        <Spinner
            android:id="@+id/spinner_min"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/spinner_design"
            android:popupBackground="@drawable/edittext_design"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/cancel_bt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#d3d3d3"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="50dp"
            android:popupBackground="@drawable/edittext_design"/>

        <Button
            android:id="@+id/check_bt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#d3d3d3"
            android:text="확인"
            android:textSize="15sp"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>